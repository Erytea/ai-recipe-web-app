# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
# Для продакшена используйте PostgreSQL:
# DATABASE_URL=postgresql://user:password@host:port/database
# Для разработки можно оставить SQLite:
DATABASE_URL=sqlite://db.sqlite3

# Web Application Configuration
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars-12345678901234567890123456789012
DEBUG=True
HOST=0.0.0.0
PORT=8000

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production-min-32-chars-12345678901234567890123456789012
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS Configuration
# Для продакшена укажите конкретные домены:
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
# Для разработки оставьте пустым (разрешит localhost):
CORS_ORIGINS=

# Redis (опционально, для кэширования сессий)
REDIS_URL=redis://localhost:6379

# File Upload Configuration
MAX_UPLOAD_SIZE=10485760  # 10MB
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp


